<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/another_activity"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="another_activity" />

    <Button
        android:id="@+id/linear_layout"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/another_activity"
        android:text="linear" />

    <Button
        android:id="@+id/relative_layout"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/another_activity"
        android:layout_toRightOf="@id/linear_layout"
        android:text="relative" />

    <Button
        android:id="@+id/grid_layout"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/another_activity"
        android:layout_toRightOf="@id/relative_layout"
        android:text="grid" />

    <Button
        android:id="@+id/frame_layout"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/another_activity"
        android:layout_toRightOf="@id/grid_layout"
        android:text="frame" />

    <Button
        android:id="@+id/scroll_view"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout"
        android:text="scroll" />

    <Button
        android:id="@+id/widget"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroll_view"
        android:text="widget" />

    <Button
        android:id="@+id/edit_text"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroll_view"
        android:layout_toRightOf="@id/widget"
        android:text="edit" />

    <Button
        android:id="@+id/image_view"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroll_view"
        android:layout_toRightOf="@id/edit_text"
        android:text="image" />

    <Button
        android:id="@+id/progress_bar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroll_view"
        android:layout_toRightOf="@id/image_view"
        android:text="progress" />

    <Button
        android:id="@+id/item_view"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget"
        android:text="item_view" />

    <Button
        android:id="@+id/simple_list"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget"
        android:layout_toRightOf="@id/item_view"
        android:text="simple_list" />

    <Button
        android:id="@+id/simple_item_list"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget"
        android:layout_toRightOf="@id/simple_list"
        android:text="item_list" />

    <Button
        android:id="@+id/header_footer_view"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_view"
        android:text="header_footer" />

    <Button
        android:id="@+id/multi_item_type"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_view"
        android:layout_toRightOf="@id/header_footer_view"
        android:text="multi_item_type" />

    <Button
        android:id="@+id/simple_choice_list_view"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_footer_view"
        android:text="choice_list" />

    <Button
        android:id="@+id/sample_expandable_list_view"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_footer_view"
        android:layout_toRightOf="@id/simple_choice_list_view"
        android:text="expandable_list" />

    <Button
        android:id="@+id/sample_spinner"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/simple_choice_list_view"
        android:text="spinner" />

    <Button
        android:id="@+id/sample_gallery"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/simple_choice_list_view"
        android:layout_toRightOf="@id/sample_spinner"
        android:text="gallery" />

    <Button
        android:id="@+id/sample_fragment"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/simple_choice_list_view"
        android:layout_toRightOf="@id/sample_gallery"
        android:text="fragment" />

    <Button
        android:id="@+id/sample_fragment_tag"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sample_spinner"
        android:text="fragment_tag" />

    <Button
        android:id="@+id/sample_fragment_call_back"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sample_spinner"
        android:layout_toRightOf="@id/sample_fragment_tag"
        android:text="fragment_call" />
</RelativeLayout>
