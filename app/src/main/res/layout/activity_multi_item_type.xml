<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tacademy.mytacademypracticeandroidapplication.MultiItemTypeActivity">

    <EditText
        android:id="@+id/multi_item_type_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <RadioGroup
        android:id="@+id/multi_item_type_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/multi_item_type_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/multi_item_type_radio_button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Send"/>

        <RadioButton
            android:id="@+id/multi_item_type_radio_button_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Receive" />

        <RadioButton
            android:id="@+id/multi_item_type_radio_button_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Date" />
    </RadioGroup>

    <Button
        android:id="@+id/multi_item_type_button_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/multi_item_type_edit_text"
        android:layout_alignRight="@+id/multi_item_type_edit_text"
        android:layout_alignEnd="@+id/multi_item_type_edit_text"
        android:text="input"/>

    <ListView
        android:id="@+id/multi_item_type_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/multi_item_type_button_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
