<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tacademy.mytacademypracticeandroidapplication.EditTextActivity">

    <TextView
        android:id="@+id/edit_text_text_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"/>

    <EditText
        android:id="@+id/edit_text1"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_text_view1"
        android:layout_marginBottom="15dp"
        android:nextFocusDown="@+id/edit_text2"
        android:singleLine="true"
        android:ems="10"
        android:hint="이메일주소를 입력해주세요"/>

    <TextView
        android:id="@+id/edit_text_text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"/>

    <EditText
        android:id="@+id/edit_text2"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_text_view2"
        android:ems="10"
        android:imeOptions="actionSend"
        android:nextFocusDown="@+id/edit_text_button"
        android:singleLine="true"
        android:textColor="#FF0000"
        android:hint="비밀번호를 입력해주세요"/>

    <Button
        android:id="@+id/edit_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="send"/>

</RelativeLayout>
